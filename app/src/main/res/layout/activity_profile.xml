<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.theme.ProfileActivity" >


    <ImageView
        android:id="@+id/btnprofileback"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backbutton" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="71dp"
        android:backgroundTint="@color/black"
        android:text="LOG OUT"
        android:textSize="10pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="555dp"
        android:layout_height="325dp"
        android:layout_marginTop="60dp"
        android:alpha="0.7"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="69dp"
        app:srcCompat="@drawable/profile" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="89dp"
        android:hint="Email"
        android:text="Name"
        android:textColorHint="@color/black"
        android:textSize="9pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/uploadimageicon" />

</RelativeLayout>