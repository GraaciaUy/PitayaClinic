<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:gravity="fill"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.theme.RegisterActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="555dp"
        android:layout_height="355dp"
        android:layout_marginTop="320dp"
        android:alpha="0.5"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background" />

    <EditText
        android:id="@+id/regUser"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="360dp"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:textSize="9pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regPass"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="75dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textSize="9pt"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/regConfirm"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="75dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textSize="9pt"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnReg"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="580dp"
        android:backgroundTint="@color/velvet"
        android:text="Register"
        android:textSize="10pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/pitayawelcome" />

    <ImageView
        android:id="@+id/btnregisterback"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backbutton" />


